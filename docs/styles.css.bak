  color: var(--text-primary);
}

.insight-header i {
  color: var(--accent-primary);
}

.insight-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.insight-list li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.75rem;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.status {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.3rem 0.75rem;
  border-radius: 999px;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.status.success {
  background: rgba(16, 185, 129, 0.18);
  color: var(--accent-success);
}

.status.pulse {
  background: rgba(59, 130, 246, 0.18);
  color: var(--accent-primary);
  box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.25);
  animation: pulseGlow 2.8s infinite;
}

.status.neutral {
  background: rgba(148, 163, 184, 0.2);
  color: var(--text-secondary);
}

@keyframes pulseGlow {
  0% {
    box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.35);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
  }
}

.insight-footer {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-secondary);
  font-size: 0.8rem;
}

.insight-footer i {
  color: var(--accent-success);
}

.trust-bar {
  max-width: 1200px;
  margin: 3rem auto 0;
  padding: 1.25rem 2rem;
  background: rgba(148, 163, 184, 0.12);
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  position: relative;
  z-index: 2;
}

[data-theme="dark"] .trust-bar {
  background: rgba(30, 41, 59, 0.85);
  border-color: rgba(96, 165, 250, 0.2);
}

.trust-label {
  font-size: 0.9rem;
  font-weight: 600;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  color: var(--text-secondary);
}

.trust-logos {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  align-items: center;
}

.trust-logos span {
  font-size: 0.95rem;
  font-weight: 500;
  color: var(--text-primary);
  opacity: 0.8;
  position: relative;
  padding-left: 1.5rem;
}

.trust-logos span::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 999px;
  background: var(--gradient-primary);
  transform: translateY(-50%);
  opacity: 0.6;
}
.cta-banner {
  padding: 6rem 0;
  background: linear-gradient(180deg, rgba(59, 130, 246, 0.08) 0%, transparent 60%);
}

.cta-card {
  background: var(--bg-secondary);
  border: 1px solid rgba(148, 163, 184, 0.25);
  border-radius: 1.75rem;
  padding: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2.5rem;
  box-shadow: var(--shadow-xl);
}

[data-theme="dark"] .cta-card {
  background: rgba(15, 23, 42, 0.92);
  border-color: rgba(96, 165, 250, 0.25);
}

.cta-content {
  max-width: 60%;
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.cta-content h2 {
  font-size: 1.75rem;
  font-weight: 800;
  color: var(--text-primary);
  line-height: 1.2;
}

.cta-content p {
  font-size: 1rem;
  color: var(--text-secondary);
  line-height: 1.7;
}

.cta-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 0.8rem;
  font-weight: 600;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--accent-primary);
  background: rgba(59, 130, 246, 0.12);
  border: 1px solid rgba(59, 130, 246, 0.35);
  border-radius: 999px;
  padding: 0.35rem 0.85rem;
}

.cta-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-ghost {
  background: transparent;
  color: var(--accent-primary);
  border: 1px solid rgba(59, 130, 246, 0.35);
  box-shadow: none;
}

.btn-ghost:hover {
  background: rgba(59, 130, 246, 0.12);
  color: white;
  box-shadow: var(--shadow-md);
}
















