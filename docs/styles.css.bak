/* Live Demo Section */
.live-demo {
  padding: 6rem 0;
  background: var(--bg-secondary);
}

.demo-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-top: 3rem;
  min-height: 600px;
}

.chat-panel {
  background: var(--bg-primary);
  border-radius: 0.75rem;
  border: 1px solid var(--border-color);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: var(--shadow-lg);
}

.chat-header {
  background: var(--bg-tertiary);
  padding: 1rem 1.5rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  border-bottom: 1px solid var(--border-color);
}

.chat-avatar {
  width: 2.5rem;
  height: 2.5rem;
  background: var(--gradient-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.25rem;
}

.chat-info h3 {
  font-size: 1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.status {
  font-size: 0.875rem;
  color: var(--accent-success);
  font-weight: 500;
  animation: statusPulse 2s ease-in-out infinite;
}

@keyframes statusPulse {
  0%, 100% { opacity: 0.7; }
  50% { opacity: 1; }
}

.chat-messages {
  flex: 1;
  padding: 1.5rem;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.message {
  display: flex;
  gap: 0.75rem;
  animation: messageSlide 0.5s ease-out;
}

@keyframes messageSlide {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-message {
  flex-direction: row-reverse;
}

.user-message .message-content {
  background: var(--gradient-primary);
  color: white;
  border-radius: 1rem 1rem 0.25rem 1rem;
}

.ai-message .message-content {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  border-radius: 1rem 1rem 1rem 0.25rem;
}

.message-avatar {
  width: 2rem;
  height: 2rem;
  background: var(--accent-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 0.875rem;
  flex-shrink: 0;
}

.message-content {
  max-width: 80%;
  padding: 0.75rem 1rem;
  position: relative;
}

.message-content p {
  margin: 0;
  line-height: 1.5;
  font-size: 0.875rem;
}

.message-time {
  font-size: 0.75rem;
  color: var(--text-muted);
  margin-top: 0.25rem;
  text-align: right;
}

.ai-message .message-time {
  text-align: left;
}

.typing-indicator {
  display: flex;
  gap: 0.25rem;
  margin-top: 0.5rem;
}

.typing-indicator span {
  width: 6px;
  height: 6px;
  background: var(--accent-primary);
  border-radius: 50%;
  animation: typingBounce 1.4s ease-in-out infinite;
}

.typing-indicator span:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator span:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typingBounce {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  30% {
    transform: translateY(-10px);
    opacity: 1;
  }
}

.chat-input {
  padding: 1rem 1.5rem;
  border-top: 1px solid var(--border-color);
  display: flex;
  gap: 0.75rem;
  align-items: center;
}

.chat-input input {
  flex: 1;
  padding: 0.75rem 1rem;
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  background: var(--bg-primary);
  color: var(--text-primary);
  font-size: 0.875rem;
  outline: none;
  transition: border-color 0.3s ease;
}

.chat-input input:focus {
  border-color: var(--accent-primary);
}

.send-btn {
  width: 2.5rem;
  height: 2.5rem;
  background: var(--accent-primary);
  border: none;
  border-radius: 0.5rem;
  color: white;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.send-btn:hover {
  background: var(--accent-secondary);
  transform: scale(1.05);
}

.doc-preview {
  background: var(--bg-primary);
  border-radius: 0.75rem;
  border: 1px solid var(--border-color);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: var(--shadow-lg);
}

.preview-header {
  background: var(--bg-tertiary);
  padding: 1rem 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid var(--border-color);
}

.preview-controls {
  display: flex;
  gap: 0.5rem;
}

.control {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.control.close { background: #ff5f57; }
.control.minimize { background: #ffbd2e; }
.control.maximize { background: #28ca42; }

.preview-title {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
}

.preview-title i {
  color: var(--accent-primary);
}

.preview-content {
  flex: 1;
  padding: 1.25rem;
  overflow-y: auto;
  font-family: 'Inter', sans-serif;
}

.doc-title h1 {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--border-color);
}

.doc-toc {
  margin-bottom: 2rem;
}

.doc-toc h2 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.doc-toc ul {
  list-style: none;
  padding: 0;
}

.doc-toc li {
  padding: 0.5rem 0;
  color: var(--text-secondary);
  border-left: 2px solid var(--accent-primary);
  padding-left: 1rem;
  margin-bottom: 0.25rem;
}

.doc-content h2 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 2rem 0 1rem 0;
}

.doc-content p {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 1rem;
}

.doc-content ul {
  color: var(--text-secondary);
  padding-left: 1.5rem;
}

.doc-content li {
  margin-bottom: 0.5rem;
  line-height: 1.5;
}

/* Data Flow Diagrams Section */
.data-flow {
  padding: 6rem 0;
  background: var(--bg-primary);
}

.flow-diagrams {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 3rem;
  margin-top: 3rem;
}

.flow-diagram {
  background: var(--bg-secondary);
  padding: 1.25rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.flow-diagram::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-primary);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.flow-diagram:hover::before {
  transform: scaleX(1);
}

.flow-diagram:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-xl);
}

.flow-diagram h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 2rem;
  color: var(--text-primary);
  text-align: center;
}

/* Mermaid Diagrams */
.mermaid {
  background: var(--bg-primary);
  border-radius: 0.5rem;
  padding: 1rem;
  margin: 1rem 0;
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.mermaid:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

/* Mermaid theme customization */
.mermaid svg {
  background: transparent !important;
}

.mermaid .node rect {
  fill: var(--bg-secondary) !important;
  stroke: var(--border-color) !important;
  stroke-width: 2px !important;
}

.mermaid .node text {
  fill: var(--text-primary) !important;
  font-family: 'Poppins', sans-serif !important;
  font-weight: 600 !important;
}

.mermaid .edgePath path {
  stroke: var(--accent-primary) !important;
  stroke-width: 2px !important;
}

.mermaid .edgePath .path {
  stroke: var(--accent-primary) !important;
  stroke-width: 2px !important;
}

.mermaid .arrowheadPath {
  fill: var(--accent-primary) !important;
}

.mermaid .cluster rect {
  fill: var(--bg-tertiary) !important;
  stroke: var(--border-color) !important;
  stroke-width: 2px !important;
}

.mermaid .cluster text {
  fill: var(--text-primary) !important;
  font-family: 'Poppins', sans-serif !important;
  font-weight: 600 !important;
}

/* Data Flow Diagram */
.diagram-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  position: relative;
  min-height: 300px;
}

.ai-model {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  padding: 1.5rem;
  background: var(--gradient-primary);
  border-radius: 0.75rem;
  color: white;
  font-weight: 600;
  z-index: 2;
  animation: pulse 2s infinite;
}

.ai-model i {
  font-size: 2rem;
}

.flow-arrows {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200px;
  height: 200px;
  z-index: 1;
}

.arrow {
  position: absolute;
  width: 2px;
  height: 60px;
  background: var(--accent-primary);
  transform-origin: bottom center;
  animation: arrowFlow 2s ease-in-out infinite;
}

.arrow-1 {
  top: 0;
  left: 50%;
  transform: translateX(-50%) rotate(0deg);
  animation-delay: 0s;
}

.arrow-2 {
  top: 0;
  left: 50%;
  transform: translateX(-50%) rotate(120deg);
  animation-delay: 0.7s;
}

.arrow-3 {
  top: 0;
  left: 50%;
  transform: translateX(-50%) rotate(240deg);
  animation-delay: 1.4s;
}

@keyframes arrowFlow {
  0%, 100% { opacity: 0.3; transform: translateX(-50%) scaleY(0.5); }
  50% { opacity: 1; transform: translateX(-50%) scaleY(1); }
}

.external-systems {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  width: 100%;
  max-width: 400px;
}

.system {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  animation: systemPulse 3s ease-in-out infinite;
}

.system:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.system i {
  font-size: 1.5rem;
  color: var(--accent-primary);
}

.system span {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-primary);
}

@keyframes systemPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* Lifecycle Diagram */
.lifecycle-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 1rem;
}

.lifecycle-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  animation: stepGlow 4s ease-in-out infinite;
}

.lifecycle-step[data-step="1"] { animation-delay: 0s; }
.lifecycle-step[data-step="2"] { animation-delay: 1s; }
.lifecycle-step[data-step="3"] { animation-delay: 2s; }
.lifecycle-step[data-step="4"] { animation-delay: 3s; }

@keyframes stepGlow {
  0%, 100% { box-shadow: 0 0 0 rgba(59, 130, 246, 0); }
  50% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
}

.step-icon {
  width: 2.5rem;
  height: 2.5rem;
  background: var(--gradient-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.25rem;
}

.lifecycle-arrow {
  width: 2rem;
  height: 2px;
  background: var(--accent-primary);
  position: relative;
  animation: arrowMove 2s ease-in-out infinite;
}

.lifecycle-arrow::after {
  content: '';
  position: absolute;
  right: -5px;
  top: -3px;
  width: 0;
  height: 0;
  border-left: 8px solid var(--accent-primary);
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
}

@keyframes arrowMove {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

/* Workflow Diagram */
.workflow-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 1rem;
}

.workflow-step {
  flex: 1;
  min-width: 120px;
}

.step-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  animation: workflowPulse 3s ease-in-out infinite;
}

.workflow-step:nth-child(1) .step-content { animation-delay: 0s; }
.workflow-step:nth-child(3) .step-content { animation-delay: 0.5s; }
.workflow-step:nth-child(5) .step-content { animation-delay: 1s; }
.workflow-step:nth-child(7) .step-content { animation-delay: 1.5s; }

@keyframes workflowPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.step-content i {
  font-size: 1.5rem;
  color: var(--accent-primary);
}

.step-content span {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
}

.workflow-arrow {
  width: 1.5rem;
  height: 2px;
  background: var(--accent-primary);
  position: relative;
  animation: workflowArrow 1.5s ease-in-out infinite;
}

.workflow-arrow::after {
  content: '';
  position: absolute;
  right: -4px;
  top: -3px;
  width: 0;
  height: 0;
  border-left: 6px solid var(--accent-primary);
  border-top: 3px solid transparent;
  border-bottom: 3px solid transparent;
}

@keyframes workflowArrow {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 1; }
}

/* Security Diagram */
.security-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 1rem;
}

.security-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  animation: securityGlow 4s ease-in-out infinite;
}

.security-step:nth-child(1) { animation-delay: 0s; }
.security-step:nth-child(3) { animation-delay: 1s; }
.security-step:nth-child(5) { animation-delay: 2s; }
.security-step:nth-child(7) { animation-delay: 3s; }

@keyframes securityGlow {
  0%, 100% { box-shadow: 0 0 0 rgba(16, 185, 129, 0); }
  50% { box-shadow: 0 0 20px rgba(16, 185, 129, 0.3); }
}

.security-icon {
  width: 2.5rem;
  height: 2.5rem;
  background: var(--gradient-accent);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 1.25rem;
}

.security-arrow {
  width: 2rem;
  height: 2px;
  background: var(--accent-success);
  position: relative;
  animation: securityArrow 2s ease-in-out infinite;
}

.security-arrow::after {
  content: '';
  position: absolute;
  right: -5px;
  top: -3px;
  width: 0;
  height: 0;
  border-left: 8px solid var(--accent-success);
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
}

@keyframes securityArrow {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

/* Collaboration Diagram */
.collaboration-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200px;
}

.agent {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  animation: agentFloat 3s ease-in-out infinite;
}

.agent-1 {
  top: 0;
  left: 20%;
  animation-delay: 0s;
}

.agent-2 {
  top: 0;
  right: 20%;
  animation-delay: 1s;
}

.agent-3 {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  animation-delay: 2s;
}

@keyframes agentFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.agent i {
  font-size: 1.5rem;
  color: var(--accent-primary);
}

.agent span {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-primary);
}

.central-hub {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1.5rem;
  background: var(--gradient-primary);
  border-radius: 0.75rem;
  color: white;
  font-weight: 600;
  z-index: 2;
  animation: hubPulse 2s ease-in-out infinite;
}

@keyframes hubPulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.1); }
}

.central-hub i {
  font-size: 2rem;
}

.collaboration-lines {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.collab-line {
  position: absolute;
  height: 2px;
  background: var(--accent-primary);
  animation: lineFlow 2s ease-in-out infinite;
}

.line-1 {
  top: 25%;
  left: 20%;
  width: 30%;
  animation-delay: 0s;
}

.line-2 {
  top: 25%;
  right: 20%;
  width: 30%;
  animation-delay: 0.5s;
}

.line-3 {
  bottom: 25%;
  left: 50%;
  width: 20%;
  transform: translateX(-50%);
  animation-delay: 1s;
}

@keyframes lineFlow {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 1; }
}

/* Examples Section */
.examples {
  padding: 6rem 0;
  background: var(--bg-secondary);
}

.examples-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 1rem;
}

.example-card {
  background: var(--bg-primary);
  border-radius: 0.75rem;
  border: 1px solid var(--border-color);
  overflow: hidden;
  transition: all 0.3s ease;
}

.example-card:hover {
  transform: translateY(-5px);
